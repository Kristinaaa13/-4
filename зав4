# 4) Дизайн замкнутої двобічної черги (Deque) — масив + кільцеві індекси
class MyCircularDeque:
    def __init__(self, k: int):
        self.n = k
        self.a = [0] * k
        self.size = 0
        self.front = 0  # індекс переднього елемента (якщо size>0)

    def _rear_index(self) -> int:
        return (self.front + self.size - 1) % self.n

    def insertFront(self, value: int) -> bool:
        if self.isFull(): return False
        self.front = (self.front - 1) % self.n
        self.a[self.front] = value
        self.size += 1
        return True

    def insertLast(self, value: int) -> bool:
        if self.isFull(): return False
        idx = (self.front + self.size) % self.n
        self.a[idx] = value
        self.size += 1
        return True

    def deleteFront(self) -> bool:
        if self.isEmpty(): return False
        self.front = (self.front + 1) % self.n
        self.size -= 1
        return True

    def deleteLast(self) -> bool:
        if self.isEmpty(): return False
        self.size -= 1
        return True

    def getFront(self) -> int:
        return -1 if self.isEmpty() else self.a[self.front]

    def getRear(self) -> int:
        return -1 if self.isEmpty() else self.a[self._rear_index()]

    def isEmpty(self) -> bool:
        return self.size == 0

    def isFull(self) -> bool:
        return self.size == self.n
# Складність: усі операції O(1), пам'ять O(k).
