# 7) Максимум ковзного вікна — монотонна дека індексів
def maxSlidingWindow(nums: List[int], k: int) -> List[int]:
    dq = deque()  # зберігає індекси, значення спадають
    ans = []
    for i, x in enumerate(nums):
        while dq and nums[dq[-1]] <= x:
            dq.pop()
        dq.append(i)
        if dq[0] <= i - k:
            dq.popleft()
        if i >= k - 1:
            ans.append(nums[dq[0]])
    return ans
# Складність: O(n) часу, O(k) пам'яті.
